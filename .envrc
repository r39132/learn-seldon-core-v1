# direnv configuration for learn-seldon project
# Automatically loads environment variables and sets up the development environment

# Load Python version from .python-version
layout python python3.12

# Activate virtual environment
source .venv/bin/activate

# Load environment variables from .env if it exists
if [ -f .env ]; then
  dotenv .env
fi

# Set default environment variables
export PROJECT_NAME="sentiment-analyzer"
export LOG_LEVEL="INFO"
export APP_VERSION="0.1.0"

# Data paths
export RAW_DATA_PATH="data/raw"
export PROCESSED_DATA_PATH="data/processed"
export MODEL_PATH="models/sentiment_model.pkl"

# Model server configuration
export MODEL_SERVER_HOST="localhost"
export MODEL_SERVER_PORT="8001"

# Training configuration
export TRAIN_TEST_SPLIT="0.2"
export RANDOM_SEED="42"
export MAX_FEATURES="5000"

# Kubernetes configuration
export K8S_NAMESPACE="seldon-system"
export SELDON_DEPLOYMENT_NAME="sentiment-classifier"

# Add project bin to PATH
PATH_add bin

echo "‚úÖ Development environment loaded for $PROJECT_NAME"
echo "üìç Python: $(python --version)"
echo "üì¶ Virtual environment: $VIRTUAL_ENV"
