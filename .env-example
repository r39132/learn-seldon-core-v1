# Application Settings
APP_NAME=sentiment-analyzer
APP_VERSION=0.1.0
ENVIRONMENT=development

# API Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Model Server Settings
MODEL_SERVER_HOST=localhost
MODEL_SERVER_PORT=8001

# Model Settings
MODEL_PATH=models/sentiment_model.pkl
MODEL_VERSION=v1

# Data Settings
DATA_PATH=data
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed

# Training Settings
TRAIN_TEST_SPLIT=0.2
RANDOM_SEED=42
MAX_FEATURES=5000
NGRAM_RANGE=(1,2)

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Kubernetes/Minikube
K8S_NAMESPACE=seldon
K8S_MODEL_REPLICAS=1
